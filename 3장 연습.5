package gongbu;
import java.util.*;
public class llsa {

	public static void main(String[] args) {
		int price=0,number=0;
		int total=0;
		int sale=0;
		Scanner num=new Scanner(System.in);
		System.out.print("상품의 가격을 입력하세요. : ");
		price=num.nextInt();
		System.out.print("상품의 수량을 입력하세요. : ");
		number=num.nextInt();
		
		total=(price*number);
		if(total>=1000000)
		{
			total=(int)(total*0.6);
			sale=40;
		}
		else if(total>=500000)
		{
			total=(int)(total*0.7);
			sale=30;
		}
		else
		{
			sale=0;
		}
		
		
		
		System.out.println("상품 단가 : "+price+"원");
		System.out.println("상품 수량 : "+number+"개");
		System.out.println("지불 금액 : "+total+"원");
		System.out.println("할인율   : "+sale+"%");
	}
		
	
	
	
}


