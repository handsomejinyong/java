package 연습4;
import java.util.*;
public class 연습4 {

	public static void main(String[] args) {
			int price; 		//상품 가격
			int sale;		//할인률
			double saleprice;//세일 가격
			Scanner a=new Scanner(System.in);
			
			System.out.print("상품 가격을 입력하세요: ");
			price=a.nextInt();	//상품가격 입력
			System.out.print("할인률을 입력하세요(%): ");
			sale=a.nextInt();	//할인률 입력
			
			saleprice=price*(100-sale)/100;//상품가격*(100-할인률)/100
			
			System.out.println("상품 가격: "+price);
			System.out.println("할인율: "+sale+"%");
			System.out.println("세일 가격: "+saleprice);
	}

}
